@using PrimeGearApp.Web.ViewModels.ProductViewModels;
@using PrimeGearApp.Data.Models;
@model EditProductViewModel;

@foreach (var property in Model.ProductTypeProperties)
{
    <div class="form-group">
        <label ="ProductProperty_@property.Id">@property.ProductTypePropertyName</label>
        @if (property.ValueTypeId == 4)
        {
            <select name="ProductProperties[@property.Id]" class="form-control" required>
                <option value="" selected disabled>-</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        }
        else if (property.ValueTypeId == 2 || property.ValueTypeId == 3)
        {
            <input name="ProductProperties[@property.Id]" class="form-control" required min="0"
                   type="number" />
        }
        else
        {
            <input name="ProductProperties[@property.Id]" class="form-control" required
                   type="text" />
        }

        <span asp-validation-for="ProductProperties[@property.Id]" class="text-danger"></span>
    </div>
}
