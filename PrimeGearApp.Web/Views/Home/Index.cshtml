@using PrimeGearApp.Web.ViewModels.HomeViewModels
@model IEnumerable<TopProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Welcome To PrimeGear! Your Vision, Your Build!</p>
</div>
<br />
<div class="text-center">
    <h1>Our Newest Products</h1>
</div>
<br />

<div class="container">
    <div class="row justify-content-center">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("Details", "Product", new { ProductId = product.Id })" class="card-link">
                    <div class="card" style="width: 18rem;">
                        @if (string.IsNullOrEmpty(product.ImagePath))
                        {
                            <img class="card-img-top product-image"
                                 src="~/images/Common/noImage.jpg"
                                 alt="@product.Name" />
                        }
                        else
                        {
                            <img class="card-img-top product-image"
                                 src="@product.ImagePath"
                                 alt="@product.Name" />
                        }

                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text"><strong>Brand:</strong> @product.Brand</p>
                            <p class="card-text"><strong>Price:</strong> $@product.Price</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<style>
    .product-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .card-link {
        text-decoration: none;
        color: inherit;
    }
    .card-body h5, .card-body p {
        color: #333;
    }
    .text-center h1 {
        text-align: center;
    }
</style>
