﻿@{
    Layout = null; // Ensures the view doesn't use a shared layout
    ViewData["Title"] = "Internal Server Error";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="d-flex align-items-center justify-content-center bg-light vh-100">
    <div class="text-center">
        <img src="/images/errors/500.jpg" alt="500 Internal Server Error"
             class="img-fluid mb-4 border border-3 border-dark rounded"
             style="max-height: 300px;">
        <h1 class="display-4 text-danger">Oops! Something Went Wrong</h1>
        <p class="lead">There was an issue on our side. Please try again later or contact support.</p>
        <a href="/" class="btn btn-primary btn-lg">Return to Home</a>
    </div>
</body>
</html>
